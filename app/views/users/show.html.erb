<%= form_with(model: @user, local: true) do |form| %>
<h1><%= @user.name %>のページ</h1>
<p>メールアドレス: <%= @user.email %></p>
  <% if @user.image.url %>
    <p>Image: <%= image_tag @user.image.url %>
    <% else %>
    <%= form.file_field :image %>
    <%= form.submit "Upload image" %>
  <% end %>
<% end %>
